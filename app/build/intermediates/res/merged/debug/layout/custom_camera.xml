<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <SurfaceView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_date"
            android:textColor="#ff4816"
            android:textSize="24sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:text="2016-01-22 12:34:55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_transparent50"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:id="@+id/rl_bottom">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_preview"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/round_rectangle_white"
        />

        <ImageButton
            android:id="@+id/shutter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/circle"
            android:onClick="shutter"
             />
        <TextView
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_more"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/more_selector"
             />
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
